.contact-info>h2{
    color: #3d6ef5ff;
    margin-bottom: 20px;
}
.contact-info>p{
    display: flex;
    align-items: center;
    gap: 10px;
    font-weight: bold;
    color: #3d6ef5ff;
    margin-block: 5px;
