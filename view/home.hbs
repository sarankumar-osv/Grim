.contact-info p>i{
    font-size: 18px;
    font-weight: bold;
}
.contact-info:hover{
    background: #3d6ef5ff;
    font-weight: bold;
    color: var(--color-white);
    transition: background-color 0.3s, color 0.3s;
}
.contact-info:hover.contact-info h2,
.contact-info:hover.contact-info p,
.contact-info:hover.contact-info i{
    color: #f2f2f2;
    font-weight: bold;
    color: var(--color-white);
